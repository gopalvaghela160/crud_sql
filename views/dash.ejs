</html>
<table border="">
    <tr>
        <th>name</th>
        <th>email</th>
        <th>password</th>
        <th>delete</th>
        <th>update</th>
    </tr>
    <% result.forEach(function(data){%>
        <tr>

            <td>
                <%= data.name%>
            </td>
            <td>
                <%= data.email%>
            </td>
            <td>
                <%= data.password%>
            </td>
            <td><a href="/delete/<%= data.id%>">delete</a></td>
            <td><a href="/update/<%= data.id%>">update</a></td>
        </tr>
        <%}) ; %>
</table>